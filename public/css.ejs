<!-- 
background-color: #f0ebe7;
details - ##582323
text, basics - #18191C -->

<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
  href="https://fonts.googleapis.com/css2?family=Raleway:wght@200;400;500;700;900&display=swap"
  rel="stylesheet"
/>

<style>
  *,
  *::after,
  *::before {
    box-sizing: border-box;
    min-width: 0;
    overflow-wrap: normal;
    margin: 0;
    padding: 0;
  }

  body {
    display: flex;
    flex-direction: column;
    background-color: #e6e8e6;
    color: #18191c;
    font-family: "Raleway", sans-serif;
    align-items: center;
  }

  input,
  button {
    font: inherit;
  }

  header {
    display: flex;
    flex-direction: row;
    width: 98%;
    justify-content: space-between;
    border-bottom: 6px solid #3e8e6b;
    margin: 10px 2px 30px 2px;
    padding: 10px 0 40px 0;
  }

  h1 {
    font-size: 72px;
    font-weight: 900;
    cursor: pointer;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  #reg-menu {
    display: flex;
    flex-direction: column;
    justify-content: right;
  }

  #reg-menu > a:hover {
    color: #705f81;
  }

  #hamburger-toggle {
    display: none;
  }

  #recipe-container {
    padding: 20px;
    width: 95dvw;
    margin: 0 1.5rem;
    columns: 6;
    gap: 15px;
    justify-items: center;
  }

  #recipe-container h2 {
    font-size: 18px;
    font-weight: 200;
  }

  #recipe-container #one-recipe {
    background-color: #ced0ce;
    width: 100%;
    margin-bottom: 15px;
    break-inside: avoid;
    display: flex;
    flex-direction: column;
    text-align: center;
    align-items: center;
    border: 2px solid #3e8e6b;
    border-radius: 15px;
    padding: 10px;
  }

  #recipe-container #one-recipe:hover {
    background-color: #d9dcd9;
    color: #705f81;
  }

  #recipe-container #one-recipe img {
    border-radius: 10px;
    height: 70%;
    max-width: 100%;
    object-fit: cover;
  }

  #recipe-container .noImg {
    border-radius: 10px;
    height: 200px;
    width: 80%;
    background-color: #705f81;
    opacity: 98%;
  }

  #recipe-container #seventyfive-opacity {
    opacity: 0.75;
  }

  #recipe-container #sixty-opacity {
    opacity: 0.6;
  }

  #recipe-container h2 {
    padding-top: 15px;
  }
  /*/////////////////////////////////*/
  /**********SHOW PAGE****************/
  /*/////////////////////////////////*/

  main #show-container {
    width: 50dvw;
    max-height: 900px;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    gap: 10%;
    background-color: #d8d7d5;
    border: 2px solid #3e8e6b;
    border-radius: 15px;
    padding: 10px;
  }

  #left-side,
  #right-side {
    width: 50%;
  }

  #show-container h2,
  ul,
  ol,
  p {
    padding: 10px 0;
    border-bottom: 1px solid #582323;
  }

  h6 {
    padding: 10px 0;
    font-size: 20px;
    font-weight: 700;
  }

  a + h6 {
    border-top: 1px solid #582323;
  }

  #color {
    color: #3e8e6b;
  }

  #show-container img {
    border-radius: 10px;
    max-width: 100%;
  }

  #show-container .noImg {
    border-radius: 10px;
    height: 100%;
    width: 100%;
    background-color: #705f81;
  }

  #show-container #seventyfive-opacity {
    opacity: 0.75;
  }

  #show-container #sixty-opacity {
    opacity: 0.6;
  }

  input {
    padding: 10px;
    margin: 10px;
  }

  button,
  input[type="submit"] {
    padding: 4px 16px;
    border: none;
    border-radius: 3px;
    width: 9rem;
    height: 3rem;
    cursor: pointer;
    margin: 5px 0;
    background-color: #e6e8e6;
    color: #3e8e6b;
    justify-content: center;
    align-items: center;
  }

  button:hover,
  input[type="submit"]:hover {
    background-color: #eff1ef;
    color: #705f81;
  }

  #actions > input[type="submit"] {
    margin-left: 0;
  }

  #actions {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 20px 20px 20px 0;
    word-wrap: normal;
  }

  /*/ ////////////////////////////////*/
  /**********FORM PAGES****************/
  /*/////////////////////////////////*/

  legend {
    font-size: 26px;
    font-weight: 700;
  }

  fieldset {
    display: flex;
    flex-direction: column;
    background-color: #d8d7d5;
    border: 2px solid #3e8e6b;
    border-radius: 15px;
    padding: 20px;
    font-size: 18px;
    font-weight: 400;
    margin-bottom: 20px;
  }

  label {
    font-weight: 700;
    margin-top: 10px;
  }

  textarea,
  input[type="text"],
  input[type="password"] {
    font-size: 18px;
    font-weight: 200;
    padding: 10px 0;
    margin: 10px 0;
    width: 100%;
  }

  textarea {
    min-height: 40px;
    line-height: 20px;
    word-wrap: normal;
    font: inherit;
  }

  form,
  input {
    display: flex;
    flex-direction: column;
  }

  #user {
    width: 60%;
  }

  /*/ ////////////////////////////////*/
  /*/////////////////////////////////*/
  /**********RESPONSIVENESS***********/
  /*/////////////////////////////////*/
  /*/ ////////////////////////////////*/

  @media screen and (max-width: 1500px) {
    #actions {
      flex-direction: column;
    }

    #recipe-container #one-recipe img {
      max-height: 300px;
    }
  }

  @media screen and (max-width: 1200px) {
    #recipe-container {
      columns: 4;
    }

    #reg-menu {
      background-color: #3e8e6b;
      color: whitesmoke;
      z-index: 1;
      height: 100vh;
      width: 100%;
      max-width: 450px;
      position: fixed;
      top: 0;
      right: -450px;
      justify-content: center;
      align-items: center;
      text-align: center;
      font-size: 3rem;
      transition: 0.3s ease;
    }

    nav:has(#hamburger-toggle:checked) #reg-menu {
      right: 0;
    }

    nav {
      padding: 1rem;
      display: flex;
    }

    #hamburger-toggle {
      display: none;
    }

    #ham-menu {
      height: 50px;
      width: 50px;
      margin-left: auto;
      position: relative;
    }

    #ham-menu span {
      height: 5px;
      width: 100%;
      border-radius: 25px;
      position: absolute;
      top: 50%;
      left: 50%;
      background-color: #705f81;
      transform: translate(-50%, -50%);
      transition: 0.3s ease;
    }

    #ham-menu span:nth-child(1) {
      top: 25%;
    }

    #ham-menu span:nth-child(3) {
      top: 75%;
    }

    #ham-menu:hover {
      cursor: pointer;
    }

    main #show-container {
      width: 90dvw;
      max-height: none;
      display: flex;
      flex-direction: column;
      gap: 5%;
      padding: 30px;
    }

    #show-container img {
      border-radius: 10px;
      display: block;
      margin-left: auto;
      margin-right: auto;
      width: 80%;
      margin-bottom: 30px;
    }

    #show-container h2 {
      border-top: 4px solid #705f81;
    }

    #left-side,
    #right-side {
      width: 100%;
    }
    #left-side {
      align-items: center;
    }

    #actions {
      flex-direction: row;
    }
  }

  /*------------------------------------------------------------*/

  @media screen and (max-width: 1000px) {
    #recipe-container {
      columns: 3;
    }

    textarea {
      min-height: 24px;
      line-height: 12px;
      font-size: 12px;
    }
  }

  /*------------------------------------------------------------*/

  @media screen and (max-width: 720px) {
    #recipe-container {
      columns: 3;
    }

    #recipe-container #one-recipe img {
      max-height: 250px;
    }
  }

  /*------------------------------------------------------------*/

  @media screen and (max-width: 500px) {
    #recipe-container {
      columns: 2;
    }

    h1 {
      font-size: 60px;
      margin-top: 10px;
    }

    main #show-container {
      padding: 25px;
    }

    #show-container img {
      width: 90%;
    }
  }

  @media screen and (max-width: 450px) {
    #actions {
      flex-direction: column;
    }
  }

  @media screen and (max-width: 400px) {
    h1 {
      font-size: 45px;
      margin-top: 15px;
    }
  }
</style>
