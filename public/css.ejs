<style>
  *,
  *::after,
  *::before {
    box-sizing: border-box;
    min-width: 0;
    overflow-wrap: normal;
  }

  body {
    display: flex;
    flex-direction: column;
    background-color: #f0ebe7;
    color: #18191c;
    font-family: "Raleway", sans-serif;
    align-items: center;
  }

  input,
  button {
    font: inherit;
  }

  header {
    display: flex;
    flex-direction: row;
    width: 98%;
    justify-content: space-between;
    border-bottom: 6px solid #b36a3e;
    margin: 10px 2px 30px 2px;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  nav {
    display: flex;
    flex-direction: column;
    justify-content: right;
  }

  #recipe-container {
    width: 95dvw;
    margin: 1.5rem;
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(6, 1fr);
    justify-items: center;
  }

  #one-recipe {
    grid-row: 1/3;
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    justify-content: center;
    border: 6px solid #18191c;
    border-radius: 5px;
    padding: 10px;
  }

  img {
    border-radius: 10px;
    height: 70%;
    width: 80%;
    object-fit: cover;
  }

  #noImg {
    border-radius: 10px;
    height: 70%;
    width: 80%;
    background-color: #b36a3e;
    color: #b36a3e;
    align-items: center;
    justify-self: center;
  }

  input {
    padding: 10px;
    margin: 10px;
  }

  button,
  input[type="submit"] {
    padding: 4px 16px;
    border: none;
    border-radius: 3px;
    width: 12rem;
    height: 3rem;
    cursor: pointer;
    margin: 5px 0;
  }

  #actions > input[type="submit"] {
    margin-left: 0;
    display: inline-block;
  }

  input[type="text"] {
    font-style: bold;
    font-size: 18px;
    align-items: center;
  }

  fieldset {
    display: flex;
    flex-direction: column;
    border: 3px solid #b36a3e;
    font-size: 18px;
    font-weight: thin 400;
  }

  form,
  input {
    display: flex;
    flex-direction: column;
  }
</style>
