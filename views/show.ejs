<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs")%>
  <body>
    <%- include("./partials/header.ejs")%>
    <main>
      <div id="show-container">
        <h2><%= recipe.name %></h2>

        <% if(recipe.img != null) { %>
        <img src="<%= recipe.img %>" />
        <% } %> <% if(recipe.img2 != null) { %>
        <img src="<%= recipe.img2 %>" />
        <% } %> <% if(recipe.ingredients != null) { %>
        <ul id="ingredients">
          <% const ingArr = recipe.ingredients.split(", "); %> <%
          ingArr.forEach(ing => { %>
          <li><%= ing %></li>
          <% }); %>
        </ul>
        <% } %> <% if(recipe.instructions != null) { %>
        <ol id="instructions">
          <% const instArr = recipe.instructions.split("; "); %> <%
          instArr.forEach(inst => { %>
          <li><%= inst %></li>
          <% }); %>
        </ol>
        <% } %> <% if(recipe.link != null) { %>
        <a href="<%= recipe.link %>"
          >See the full <%= recipe.name %> recipe here.</a
        >
        <% } %> <% if(recipe.notes != null) { %>
        <h6>Some thoughts</h6>
        <p><%= recipe.notes %></p>
        <% } %>
      </div>
    </main>
  </body>
</html>
